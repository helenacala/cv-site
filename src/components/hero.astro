---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="this is me"
      widths={[200, 400, 600]}
      aspectRatio="4:3"
      sizes="(<ma></ma>x-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Helena Cala
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Hello, I'm Helena Cala, a third-year student pursuing a Bachelor of Science in Chemistry and Computer Science at Maynooth Univeristy. This website holds details about my work experience, blogs, and serves as a point of contact for any questions or potential opportunities.

    </p>

    <p style="padding-top: 10px"><b>Email: </b>helenacala@protonmail.com</p>
    <p style="padding-top: 10px"><b>Phone: </b>+353 87 189 1603</p>

    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="https://www.linkedin.com/in/helena-cala-a41080260/"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxl-linkedin" />

        LinkedIn
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/helenacala"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
        GitHub
      </Link>
    </div>
  </div>
</main>
